<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                       http://maven.apache.org/xsd/maven-4.0.0.xsd">  
  <modelVersion>4.0.0</modelVersion>  
  <parent> 
    <artifactId>jahia-modules</artifactId>  
    <groupId>org.jahia.modules</groupId>  
    <version>7.0.0.0-SNAPSHOT</version> 
  </parent>  
  <groupId>org.jahia.modules</groupId>  
  <artifactId>flickr-demo-module</artifactId>  
  <name>Flickr Demo Module</name>  
  <version>1.0-SNAPSHOT</version>  
  <packaging>bundle</packaging>  
  <description>This is the custom module (Flickr Demo Module) for running on a Jahia server.</description>  
  <scm> 
    <connection>scm:git:https://github.com/Jahia/flickr-demo-module.git</connection>  
    <developerConnection>scm:git:https://github.com/Jahia/flickr-demo-module.git</developerConnection> 
  </scm>  
  <repositories> 
    <repository> 
      <id>jahiaRepository</id>  
      <name>Jahia's Maven Repository</name>  
      <url>http://maven.jahia.org/maven2</url> 
    </repository>  
    <repository> 
      <id>jahia-public</id>  
      <name>Jahia Public Repository</name>  
      <url>https://devtools.jahia.com/nexus/content/groups/public</url>  
      <releases> 
        <enabled>true</enabled>  
        <updatePolicy>never</updatePolicy> 
      </releases>  
      <snapshots> 
        <enabled>true</enabled> 
      </snapshots> 
    </repository> 
  </repositories>  
  <pluginRepositories> 
    <pluginRepository> 
      <id>jahiaRepository</id>  
      <name>Jahia's Maven Repository</name>  
      <url>http://maven.jahia.org/maven2</url> 
    </pluginRepository> 
  </pluginRepositories>  
  <build> 
    <plugins> 
      <plugin> 
        <groupId>org.apache.maven.plugins</groupId>  
        <artifactId>maven-jar-plugin</artifactId>  
        <executions> 
          <execution> 
            <id>jar</id>  
            <phase>package</phase>  
            <goals> 
              <goal>jar</goal> 
            </goals>  
            <configuration> 
              <classifier>classes</classifier> 
            </configuration> 
          </execution> 
        </executions> 
      </plugin>  
      <plugin> 
        <groupId>org.apache.felix</groupId>  
        <artifactId>maven-bundle-plugin</artifactId>  
        <extensions>true</extensions>  
        <configuration> 
          <instructions>
            <Jahia-Depends>default,bootstrap-components</Jahia-Depends>
            <Import-Package>com.ibm.uvm.tools;resolution:=optional, com.sun.jdmk.comm;resolution:=optional, com.sun.jimi.core;resolution:=optional, com.sun.net.ssl;resolution:=optional, com.sun.net.ssl.internal.ssl;resolution:=optional, javax.jmdns;resolution:=optional, javax.jms;resolution:=optional, org.apache.avalon.framework.logger;resolution:=optional, org.apache.bsf;resolution:=optional, org.apache.log;resolution:=optional, org.exolab.castor.xml;resolution:=optional, org.mortbay.http;resolution:=optional, org.mortbay.http.handler;resolution:=optional, org.mortbay.jetty.servlet;resolution:=optional, sun.security.provider;resolution:=optional, sun.security.util;resolution:=optional, test.wsdl.import2.types;resolution:=optional,${jahia.plugin.projectPackageImport},*</Import-Package>
          </instructions>
        </configuration> 
      </plugin>
    </plugins> 
  </build>  
  <dependencies>
    <dependency> 
      <groupId>com.aetrion.flickr</groupId>  
      <artifactId>flickrapi</artifactId>  
      <version>1.1</version> 
    </dependency> 
  </dependencies> 
</project>
